<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_custom_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BLUE"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sure_load_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dip"
            android:text="设置连接的设备"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手柄名称"
            android:textColor="@color/main_title"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/choose_skin_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bg_item_car_num_pressed"
            android:gravity="center"
            android:hint=""
            android:orientation="horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手柄mac"
            android:textColor="@color/main_title"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/choose_skin_mac"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bg_item_car_num_pressed"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="17"
            android:hint="10:12:13:14:15"
            android:orientation="horizontal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯光名称"
            android:textColor="@color/main_title"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/choose_light_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bg_item_car_num_pressed"
            android:gravity="center"
            android:hint=""
            android:orientation="horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯光mac"
            android:textColor="@color/main_title"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/choose_light_mac"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bg_item_car_num_pressed"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="17"
            android:hint="EC:B1:C3:00:0E:F0"
            android:orientation="horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sure_load_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_left_pressed"
                android:text="取消"
                android:textColor="@color/BLUE"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dip"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sure_load_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_right_pressed"
                android:text="保存"
                android:textColor="@color/BLUE"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>