<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MergeRootFrame">

    <RelativeLayout
        android:id="@+id/camera_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/camera_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_title_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="拍照"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_12"
            />

        <ImageView
            android:id="@+id/camera_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/bluetooth_blank"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/camera_title">

        <com.serenegiant.usb.widget.UVCCameraTextureView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        >
        <ImageButton
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_camera"
            />
        <Button
            android:id="@+id/camera_light_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯光1"
            android:layout_marginBottom="60dp"
            android:layout_above="@+id/take_photo"
            ></Button>

        <Button
            android:id="@+id/camera_light_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯光2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/take_photo"
            android:layout_marginTop="60dp"
            ></Button>
    </RelativeLayout>
</RelativeLayout>